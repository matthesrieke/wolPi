<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.matthesrieke.wolpi"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.INTERNET" />
   
    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.matthesrieke.wolpi.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.matthesrieke.wolpi.ui.HostListActivity"
            android:label="@string/title_host_list" />
        <activity
            android:name="de.matthesrieke.wolpi.ui.HostManagementActivity"
            android:label="@string/title_host_management" />
    </application>

</manifest>